<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImaginaSevilla"
        tools:targetApi="31">
        <activity
            android:name=".activities.FormActivity"
            android:exported="false" />
        <activity
            android:name=".activities.HomeMain"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad de la tarjetas -->
        <activity android:name=".activities.ImprescindiblesActivity" />
        <activity android:name=".activities.AlojamientoActivity" />
        <activity android:name=".activities.EventosActivity" />
        <activity android:name=".activities.LlegadaActivity" />
        <activity android:name=".activities.AlcazarActivity" />
        <activity android:name=".activities.CatedralActivity" />
        <activity android:name=".activities.PlazaActivity" />
        <activity android:name=".activities.TorreActivity" />
        <activity android:name=".activities.LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>